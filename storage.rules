rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Imágenes públicas de posts y proyectos
    match /images/{allPaths=**} {
      allow read: if true;
      // En desarrollo: cualquier usuario autenticado puede escribir
      // En producción: cambiar a request.auth.token.admin == true
      allow write: if request.auth != null;
    }
  }
}